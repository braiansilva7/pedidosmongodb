{{>partials/header}}

<form method="POST" action="/novopedido">
        
        <div class="form-group">
            <label for="data">Data</label>
            <input type="text" id="data" class="form-control" disabled value={{dataHoje}} />        
        </div>    
        
        <div class="form-group">
            <label for="pedido">Pedido</label>
            <input type="text" id="pedido" name="solicitacao" class="form-control" maxlength=20 required/>
        </div>
        
        <div class="form-group">
            <label for="cliente">Cliente</label>
            <input id="cliente" type="text" name="cliente" class="form-control" maxlength=15/>
        </div>

        <div class="form-group">
            <label for="whats">Whats do Cliente</label>
            <input id="whats" type="text" name="contato" class="form-control" maxlength=12/>
        </div>
        
        <button class="btn btn-primary" type="submit">Incluir</button>
    </form>

{{>partials/footer}}


